            //             'url': url,
            //             'data': JSON.stringify(data),
            //             'dataType': 'text',
            //             'success': callback
            //         },
            //     });
            // };
            $.poJSON = function (url, token, title, user, callback) {
                return jQuery.ajax({
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8',
                        'token': token
                    },
                    'type': 'POST',
                    'url': url,
                    //'data': JSON.stringify(data),
                    'title': JSON.stringify(title),
                    'username': JSON.stringify(user),
                    'dataType': 'text',
                    'success': callback
                });
            };
            function submit_enroll(titlu){
                var dataToSend = {
                    title: titlu,
                    username: sessionStorage.currentUser
                };
                console.log("dataToSend: ",dataToSend);
                $.poJSON(
                    "http://localhost:8080/courses/enroll",
                    //dataToSend,
                    sessionStorage.accessToken,
                    titlu,
                    sessionStorage.currentUser,
                    function (data, status) {
                        console.log("Data: " + data + "\nStatus: " + status);
                    }
                 );
            }
            function submit_unenroll(titlu){
                var dataToSend = {
                    title: titlu,
                    username: sessionStorage.currentUser
                };
                console.log("dataToSend: ",dataToSend);
                $.poJSON(
                    "http://localhost:8080/courses/unenroll",
                    //dataToSend,
                    sessionStorage.accessToken,
                    titlu,
                    sessionStorage.currentUser,
                    function (data, status) {
                        console.log("Data: " + data + "\nStatus: " + status);
                    }
                 );
            }
        });